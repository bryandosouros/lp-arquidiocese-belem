rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Função auxiliar para ler a role de um usuário diretamente do banco de dados
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/roles/$(userId)).data.role;
    }

    // Coleção de Posts
    match /posts/{postId} {
      // Permitir leitura pública das notícias (sem autenticação necessária)
      allow read: if true;
      
      // Apenas usuários autenticados com roles específicas podem escrever
      allow create, update, delete: if request.auth != null && 
        exists(/databases/$(database)/documents/roles/$(request.auth.uid)) &&
        getUserRole(request.auth.uid) in ['superAdmin', 'siteAdmin', 'editor', 'autor'];
    }
    
    // Coleção de Roles
    match /roles/{userId} {
      // Um usuário só pode ler sua própria role
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Apenas um Super Admin pode criar, modificar ou apagar roles de outros usuários
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/roles/$(request.auth.uid)) &&
        getUserRole(request.auth.uid) == 'superAdmin';
    }
    
    // Coleção de comentários (se existir)
    match /comments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Outras coleções públicas (newsletter, contato, etc.)
    match /newsletter/{docId} {
      allow read, write: if true;
    }
    
    match /contact/{docId} {
      allow read, write: if true;
    }
    
    // Coleção de Velas Virtuais - acesso público para orações
    match /velas-virtuais/{velaId} {
      allow read: if true; // Leitura pública para mostrar orações
      allow create: if true; // Permitir criar novas velas/orações sem autenticação
      allow update, delete: if false; // Não permitir edição ou exclusão
    }
  }
}