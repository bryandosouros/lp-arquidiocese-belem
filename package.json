{
  "name": "lp-arquidiocese-belem",
  "version": "1.0.0",
  "description": "Site da Arquidiocese de Belém do Pará - Habbo V2.0",
  "main": "public/index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tailwind:build": "tailwindcss -i ./src/input.css -o ./public/css/output.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./public/css/output.css --watch",
    "dev": "npm run tailwind:watch",
    "build": "npm run tailwind:build",
    "clean": "rm -f public/css/output.css",
    "start": "npm run build && echo \"Build completed! Open public/index.html in your browser.\"",
    "serve": "npx serve public -p 3000",
    "deploy": "firebase deploy --only hosting"
  },
  "author": "Seu Nome ou Nome da Equipe Aqui",
  "license": "ISC",
  "devDependencies": {
    "sass": "^1.77.4",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "firebase": "^12.0.0",
    "firebase-admin": "^13.4.0",
    "he": "^1.2.0",
    "xml2js": "^0.6.2"
  }
}
